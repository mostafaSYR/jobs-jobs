<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Listings</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body>

<div class="container mt-5">
  <h2 class="text-center mb-4">Job Listings</h2>

  <div class="row">
    <% jobs.forEach(job => { %>
        <div class="card mt-5">
          <div class="card-body">
            <h5 class="card-title"><%= job.title %></h5>
            <p class="card-text"><%= job.description %></p>
            <p class="text-muted"><%= job.user?.email ? `Posted by: ${job.user.email}` : 'External Job' %></p>

            <% if (job.externalLink) { %>
              <a href="<%= job.externalLink %>" class="btn btn-primary" target="_blank">View Job</a>
            <% } else { %>
              <% if (job.status == 'APPROVED') { %>
                <a href="/jobs/<%= job.id %>/spam" class="btn btn-danger">Mark as Spam</a>
              <% } else { %>
                <a href="/jobs/<%= job.id %>/approve" class="btn btn-success">Approve</a>
              <% } %>
            <% } %>
          </div>
        </div>
    <% }) %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

</body>
</html>
